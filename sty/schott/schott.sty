  \iffieldundef{urlyear}%
               {}%
               {\printtext{Retrieved \printurldate\ from}%
                 \setunit{\addspace}}% Suggested by Stephen Brumbaugh
               \ifthenelse{\boolean{bbx@publimedium}\AND\NOT\iffieldundef{url}}%
                          {\ifthenelse{\boolean{bbx:gnoreminfo}}%
